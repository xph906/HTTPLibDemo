<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/head_layout"
        android:paddingBottom="20dp">

        <EditText android:text="@string/default_ip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/ip_text" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="BW Testing"
            android:id="@+id/bw_testing_button"/>
        <Button
            android:text="Net Info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/netinfo_button"/>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CNN(US)"
            android:id="@+id/http_cnn_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DOUBAN(CN)"
            android:id="@+id/http_douban_button"/>
        <Button
            android:text="AVITO(RU)"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/http_avito_button"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="AREN(US)"
            android:id="@+id/http_aren_button"/>
        <Button
            android:text="ZDAL(CN)"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/http_zdal_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="INST(RU)"
            android:id="@+id/http_instalook_button"/>
    </LinearLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dns_layout"
        android:paddingBottom="20dp">

        <Button
            android:text="DNS Testing"
            android:textSize="5pt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/dns_server_testing_button"/>

        <Button
            android:layout_width="0dp"
            android:textSize="5pt"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DNS Cache"
            android:id="@+id/dns_cache_display_button"/>

        <Button
            android:layout_width="0dp"
            android:textSize="5pt"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Clear Output"
            android:id="@+id/clear_output_button"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:id="@+id/text_scroll_view"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Results"
            android:id="@+id/result_text" />

    </ScrollView>


</LinearLayout>
